	header.header
		//- slide show
		include ../../blocks/head-slider/head-slider.pug
		.top-line
			.container
				.row
					.col-md-10
						include ../../blocks/top-info/top-info.pug
					.col-md-2
						a(href="#").btn.btn-accent.top-info__call-btn Обратный звонок
		.top-nav
			.container
				.row
					.col-md-5.d-flex.align-items-center.justify-content-start
